
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin View</title>
</head>
<body>
    <h2>Welcome, Admin</h2>
    
    <p id="tokenDisplay"></p>
    <p id="dataDisplay"></p>

    <script>
    // Fetch the JWT token from localStorage
        var token = localStorage.getItem('token');
    
        // Display the token (if needed)
        document.getElementById('tokenDisplay').innerText = token;

        // Fetch data from the API
        fetch('/api/admin/admin/dashboard', {
            method: 'GET',
            headers: {
                'Authorization': `Bearer ${token}`,  // Include the Bearer token
                'Content-Type': 'application/json'
            }
        })
        .then(response => {
            if (response.status === 401) {
                alert('Unauthorized: Invalid or expired token.');
                // Optionally, redirect to login page
                window.location.href = '/api/login';
            } else if (response.ok) {
                return response.text();  // Use .text() if the response is a simple string
            } else {
                throw new Error(`HTTP error! Status: ${response.status}`);
            }
        })
        .then(data => {
            // Display the data in the HTML element
            var dataDisplay = document.getElementById('dataDisplay');
            dataDisplay.innerHTML = `<pre>${data}</pre>`;  // Display plain text or JSON
        })
        .catch(error => {
            console.error('Error:', error);
        });  
    </script>

