<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employer Details</title>
    <link rel="stylesheet" href="/css/styles.css"> <!-- Assuming styles.css is your common stylesheet -->
</head>
<body>
    <div class="container">
        <h2>Employer Details</h2>
        <div id="employerDetails">
            <!-- Employer details will be populated here -->
        </div>
        <a href="/Admin/AdminMVC/Employers" class="btn">Back to List</a>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var employerId = "@ViewBag.EmployerId";
            var token = localStorage.getItem('token');

            if (!token) {
                alert('No token found. Please log in again.');
                window.location.href = '/login';
                return;
            }

            fetch(`/api/admin/EmployerDetails/${employerId}`, {
                method: 'GET',
                headers: {
                    'Authorization': `Bearer ${token}`,
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(employer => {
                var details = `
                    <p><strong>ID:</strong> ${employer.employerID}</p>
                    <p><strong>Company Name:</strong> ${employer.companyName}</p>
                    <p><strong>Contact Person:</strong> ${employer.contactPerson}</p>
                    <p><strong>Phone Number:</strong> ${employer.phoneNumber}</p>
                    <p><strong>Address:</strong> ${employer.companyAddress}</p>
                    <p><strong>Industry Type:</strong> ${employer.industryType}</p>
                    <p><strong>Website:</strong> ${employer.websiteURL}</p>
                    <p><strong>User ID:</strong> ${employer.userID}</p>
                `;
                document.getElementById('employerDetails').innerHTML = details;
            })
            .catch(error => console.error('Error:', error));
        });
    </script>
</body>
</html>
