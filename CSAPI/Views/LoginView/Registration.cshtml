<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="~/css/styles.css"> <!-- Assuming this is the same stylesheet used in the login view -->
</head>
<body>
    <div class="container">
        <h2>Register</h2>
        <form id="registerForm">
            <div class="form-item">
                <label for="firstName">First Name:</label>
                <input type="text" id="firstName" name="firstName" required>
            </div>
            <div class="form-item">
                <label for="lastName">Last Name:</label>
                <input type="text" id="lastName" name="lastName" required>
            </div>
            <div class="form-item">
                <label for="phoneNumber">Phone Number:</label>
                <input type="text" id="phoneNumber" name="phoneNumber">
            </div>
            <div class="form-item">
                <label for="address">Address:</label>
                <input type="text" id="address" name="address">
            </div>
            <div class="form-item">
                <label for="profileSummary">Profile Summary:</label>
                <textarea id="profileSummary" name="profileSummary"></textarea>
            </div>
            <div class="form-item">
                <label for="keySkills">Key Skills:</label>
                <textarea id="keySkills" name="keySkills" required></textarea>
            </div>
            <div class="form-item">
                <label for="expertField">Expert Field:</label>
                <input type="text" id="expertField" name="expertField" required>
            </div>
            <div class="form-item">
                <label for="resume">Resume:</label>
                <input type="file" id="resume" name="resume" required>
            </div>
            <div class="form-item">
                <label for="academicDetails">Academic Details:</label>
                <textarea id="academicDetails" name="academicDetails"></textarea>
            </div>
            <div class="form-item">
                <label for="professionalDetails">Professional Details:</label>
                <textarea id="professionalDetails" name="professionalDetails"></textarea>
            </div>
            <div class="form-item">
                <label for="preferredIndustry">Preferred Industry:</label>
                <input type="text" id="preferredIndustry" name="preferredIndustry">
            </div>
            <div class="form-item">
                <label for="preferredSpecialization">Preferred Specialization:</label>
                <input type="text" id="preferredSpecialization" name="preferredSpecialization">
            </div>
            <button type="submit" class="btn">Register</button>
        </form>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('registerForm').addEventListener('submit', function(event) {
                event.preventDefault();

                var formData = new FormData(this);

                fetch('/api/Registration/AddJobseekerProfile', {
                    method: 'POST',
                    body: formData
                })
                .then(response => {
                    if (response.ok) {
                        alert('Registration successful!');
                        window.location.href = '/login';
                    } else {
                        alert('Failed to register.');
                    }
                })
                .catch(error => console.error('Error:', error));
            });
        });
    </script>
</body>
</html>